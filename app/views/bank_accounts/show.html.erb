<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h1 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Información de cuenta de banco</h1>

    <div class="<%= form_details_class %>">
      <p class="<%= p_class %>"><strong>Nombre de banco:</strong> <%= @bank_account.bank_name %></p>
      <p class="<%= p_class %>"><strong>Divisa:</strong> <%= @bank_account.currency %></p>
      <p class="<%= p_class %>"><strong>Número de cuenta:</strong> <%= @bank_account.number %></p>
    </div>

    <%= link_to 'Editar', edit_bank_account_path(@bank_account), class: "text-primary-700 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-700" %>
    <%= link_to 'Regresar', bank_accounts_path, class: "text-primary-700 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-700" %>
    <div class="mt-4">
      <%= button_to "Eliminar", @bank_account, method: :delete, form: { data: { turbo_confirm: '¿Estás seguro?' } }, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-200 dark:focus:ring-red-900 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>
  </div>
</section>
