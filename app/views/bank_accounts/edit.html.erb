<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h1 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Editar cuenta de banco</h1>

    <%= form_with model: @bank_account, local: true do |form| %>
      <div class=<%= div_field_form_class %>>
        <%= form_label(form, :bank_name) %>
        <%= form.text_field :bank_name, class: field_class %>
      </div>

      <div class=<%= div_field_form_class %>>
        <%= form_label(form, :number) %>
        <%= form.text_field :number, class: field_class %>
      </div>
      
      <div class=<%= div_field_form_class %>>
        <%= form_label(form, :currency) %>
        <%= form.select :currency, BankAccount.currencies.keys.map { |currency| [currency, currency] }, { selected: @bank_account.currency }, class: field_class %>
      </div>
      
      <br>

      <div>
        <%= form.submit "Actualizar", class: submit_class %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= button_to "Eliminar", @bank_account, method: :delete, form: { data: { turbo_confirm: '¿Estás seguro?' } }, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-200 dark:focus:ring-red-900 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>

    <div class="mt-6">
      <%= link_to "Regresar a cuentas de banco", bank_accounts_path, class: "text-primary-700 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-700" %>
    </div>
  </div>
</section>