<h1 class="<%= h1_edit_class %>">Pa√≠ses activos</h1>

  <div class="grid md:grid-cols-4 sm:grid-cols-1 gap-2">
  <% @countries_in_spanish.each do |country_name, country_code| %>
        <%= form_tag country_settings_path, method: :patch, data: {controller: 'permission'} do %>
          <%= hidden_field_tag "countries[#{country_code}]", 0 %>
          <%= check_box_tag "countries[#{country_code}]", 1, check_if_country_is_selected(country_code), id: "country_#{country_code}", class: "rounded border-gray-300 text-primary-600 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50" %>
          <%= label_tag "country_#{country_code}", country_name, class: "ml-1 text-sm text-gray-600 dark:text-white" %>
        <% end %>
  <% end %>
    </div>
