<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h1 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Información de método de pago</h1>

    <div class="<%= form_details_class %>">
      <p class="<%= p_class %>"><strong>Tipo:</strong> <%= @payment_method.method_type %></p>
    </div>

    <%= link_to 'Editar', edit_payment_method_path(@payment_method), class: "text-primary-700 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-700" %>
    <%= link_to 'Regresar', payment_methods_path, class: "text-primary-700 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-700" %>
    <div class="mt-4">
      <%= button_to "Eliminar", @payment_method, method: :delete, form: { data: { turbo_confirm: '¿Estás seguro?' } }, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-200 dark:focus:ring-red-900 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>
    </div>
</section>
