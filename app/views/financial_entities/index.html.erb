<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto lg:py-16">
    <h1 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Entidades Financieras</h1>
    <%= link_to "Nueva entidad financiera", new_financial_entity_path, class: link_index_helper %>

    <br>
    <br>
    <div class="<%= div_table_class %>">
      <table class="<%= table_class %>">
        <thead class="<%= thead_class %>">
          <tr>
            <th scope="col" class="<%= th_td_class %>">Nombre de Entidad Financiera</th>
            <th scope="col" class="<%= th_td_class %>">Tipo de Financiamiento</th>
            <th scope="col" class="<%= th_td_class %>">Porcentaje de Enganche</th>
            <th scope="col" class="<%= th_td_class %>">Tasa de Interés Anual</th>
            <th scope="col" class="<%= th_td_class %>">Cuota de enganche mínimo(Q):</th>
            <th scope="col" class="<%= th_td_class %>">Cuota de enganche mínimo($):</th>
            <th scope="col" class="<%= th_td_class %>">Máximo de años a financiar:</th>
            <th scope="col" class="<%= th_td_class %>">Meses para pagar enganche:</th>

            <!-- Más columnas según sea necesario -->
            <th scope="col" class="<%= th_td_class %>"> Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @financial_entities.each do |financial_entity| %>
            <tr class="<%= tr_class %>">
              <td class="<%= th_td_class %>"><%= financial_entity.name %></td>
              <td class="<%= th_td_class %>"><%= I18n.t("activerecord.attributes.financial_entity.#{financial_entity.financing_type}") %></td>
              <td class="<%= th_td_class %>"><%= sprintf('%.2f', financial_entity.down_payment_percentage) %>%</td>
              <td class="<%= th_td_class %>"><%= sprintf('%.2f', financial_entity.annual_interest_rate) %>%</td>
              <td class="<%= th_td_class %>"><%= financial_entity.minimum_down_payment&.format(thousands_separator: ",") %></td>
              <td class="<%= th_td_class %>"><%= financial_entity.minimum_down_payment_dollar&.format(thousands_separator: ",") %></td>
              <td class="<%= th_td_class %>"><%= financial_entity.maximum_years_to_finance %></td>
              <td class="<%= th_td_class %>"><%= financial_entity.months_to_pay_down_payment %></td>
              <td class="<%= th_td_class %>">
                <div class="flex space-x-2">
                <%= link_to financial_entity do %>
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4 6-9 6s-9-4.8-9-6c0-1.2 4-6 9-6s9 4.8 9 6Z" />
                  <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
              <% end %>

                <%= link_to edit_financial_entity_path(financial_entity) do %>
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10.8 17.8-6.4 2.1 2.1-6.4m4.3 4.3L19 9a3 3 0 0 0-4-4l-8.4 8.6m4.3 4.3-4.3-4.3m2.1 2.1L15 9.1m-2.1-2 4.2 4.2" />
                </svg>
                <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
