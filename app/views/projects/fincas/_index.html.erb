      <!-- Aquí irá tu tabla y otros contenidos -->

      <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
        <%= form_with(url: new_project_finca_path(@project), method: :get, class: "w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0") do |form| %>
          <%= form.number_field :count, min: 0, value: @fincas.length, class: field_class %>
          <%= form.submit "Fincas crear/editar", class: submit_class %>
        <% end %>
        <p class="<%= p_class %>">
          <strong>Fecha de actualización:</strong>
          <%= l(@fincas.unscoped.order(updated_at: :desc).first.updated_at, format: :short) if @fincas.first.present? %>
        </p>
      </div>

      <div class="<%= div_table_class %>">
        <table class="<%= table_class %>">
          <thead class="<%= thead_class %>">
            <tr>
              <th scope="col" class="<%= th_td_class %>">Número</th>
              <th scope="col" class="<%= th_td_class %>">Folio</th>
              <th scope="col" class="<%= th_td_class %>">Libro</th>
              <th scope="col" class="<%= th_td_class %>">Descripción</th>
              <th scope="col" class="<%= th_td_class %>">Área</th>
              <th scope="col" class="<%= th_td_class %>">Remanente</th>
              <th scope="col" class="<%= th_td_class %>">Propietario</th>
              <th scope="col" class="<%= th_td_class %>">Fecha de creación</th>
              <!-- Más columnas según sea necesario -->
              <!-- <th scope="col" class="<%= th_td_class %>">
                <span class="sr-only">Actions</span>
              </th> -->
            </tr>
          </thead>
          <tbody>
            <% @fincas.each do |finca| %>
              <tr class="<%= tr_class %>">
                <td class="<%= th_td_class %>"><%= finca.número %></td>
                <td class="<%= th_td_class %>"><%= finca.folio %></td>
                <td class="<%= th_td_class %>"><%= finca.libro %></td>
                <td class="<%= th_td_class %>"><%= finca.departamento %></td>
                <td class="<%= th_td_class %>"><%= format_decimal_fincas(finca.área) %></td>
                <td class="<%= th_td_class %>"><%= format_decimal_fincas(finca.remanente) %></td>
                <td class="<%= th_td_class %>"><%= finca.propietario %></td>
                <td class="<%= th_td_class %>"><%= l(finca.created_at, format: :short) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

