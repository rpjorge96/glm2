<div
  data-controller="ventas--lots"
  data-action="ventas--control-units:openMergeLotsModal@window->ventas--lots#openModal"
  data-ventas--lots-available-houses-value='<%= @available_houses.to_json.html_safe %>'
  id="mergeLotsModal"
  tabindex="-1"
  aria-modal="true"
  role="dialog"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative max-h-full w-full max-w-4xl">
    <!-- Modal content -->
    <div class="relative rounded-lg bg-white shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-start justify-between rounded-t border-b p-5 dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white lg:text-2xl">
          Unificar
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                data-action="click->ventas--lots#closeModal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Cerrar modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="flex flex-row">
        <div class="w-1/2 p-6">
          <h3 class="text-md font-semibold underline text-gray-900 dark:text-white">A Unificar:</h3>
          <ul data-ventas--lots-target="mergedLotsList" class="list-disc text-gray-900 dark:text-white px-4">

          </ul>
        </div>
        <div class="w-1/2 p-6">
          <h3 class="text-md font-semibold underline text-gray-900 dark:text-white">Casas Disponibles:</h3>
          <div data-ventas--lots-target="availableHousesList" class="text-gray-900 dark:text-white">

          </div>
        </div>
      </div>
      <div
        class="flex justify-between space-x-2 rtl:space-x-reverse rounded-b border-t border-gray-200 p-6 dark:border-gray-600">
        <button
          type="button"
          class="rounded-lg bg-red-700 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
          data-action="click->ventas--lots#closeModal">
          Cancelar
        </button>
        <button
          type="button"
          class="inline-flex items-center rounded-lg bg-green-700 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
          data-action="click->ventas--lots#mergeLots">
          Unificar y Cotizar
          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
