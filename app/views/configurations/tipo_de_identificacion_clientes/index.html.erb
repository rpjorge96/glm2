<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h1 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Tipos de Identifiación de clientes</h1>
    <%= link_to "Nuevo tipo", new_configurations_tipo_de_identificacion_cliente_path, class: link_index_helper %>

    <br>
    <div class="<%= div_table_class %>">
      <table class="<%= table_class %>">
        <thead class="<%= thead_class %>">
          <tr>
            <th scope="col" class="<%= th_td_class %>">Nombre</th>
            <th scope="col" class="<%= th_td_class %>">Fecha de creación</th>
            <th scope="col" class="<%= th_td_class %>">Fecha de actualización</th>

            <!-- Más columnas según sea necesario -->
            <th scope="col" class="<%= th_td_class %>"> Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @tipo_de_identificacion_clientes.each do |tipo_de_identificacion_cliente| %>
            <tr class="<%= tr_class %>">
              <td class="<%= th_td_class %>"><%= tipo_de_identificacion_cliente.nombre %></td>
              <td class="<%= th_td_class %>"><%= l(tipo_de_identificacion_cliente.created_at, format: :short) %></td>
              <td class="<%= th_td_class %>"><%= l(tipo_de_identificacion_cliente.updated_at, format: :short) %></td>
              <td class="<%= th_td_class %>">
                <div class="flex space-x-2">
                <%= link_to configurations_tipo_de_identificacion_cliente_path(tipo_de_identificacion_cliente) do %>
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4 6-9 6s-9-4.8-9-6c0-1.2 4-6 9-6s9 4.8 9 6Z" />
                  <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
              <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
