<div class="flex justify-between">
  <div class="flex flex-col" style="width: 80%;">
    <div class="flex">
      <div style="width: 65%;">
        <%= render(Pdf::FlexContentComponent.new(title: "Cliente", bg_color: @bg_color).with_content(@quotation.client_name)) %>
      </div>
      <div style="width: 35%;">
        <%= render(Pdf::FlexContentComponent.new(title: "Teléfono", bg_color: @bg_color).with_content(@quotation.client_phone)) %>
      </div>
    </div>
    <%= render(Pdf::FlexContentComponent.new(title: "Proyecto", bg_color: @bg_color, center_content: true).with_content(@quotation.project.name)) %>

    <div class="flex">
      <% @quotation.code_data.each do |k, value| %>
        <%= render(Pdf::FlexContentComponent.new(title: k.humanize, bg_color: @bg_color, center_content: true, small: true).with_content(value)) %>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col justify-center items-center" style="width: 20%;">
    <span class="text-sm font-bold"><strong>COTIZACIÓN #</strong> </span>
    <span class="text-sm font-black text-red-700 "><%= @quotation.reference_number %></span>
    <span class="text-xs"><%= @quotation.created_at.strftime("%d-%m-%Y") %></span>
    <span class="font-medium text-sm">Página <%= @page %>/<%= @total_pages %></span>
  </div>
</div>