<div
  data-controller="modal-component"
  data-modal-component-modal-id-value="<%= @modal_id %>"
  data-modal-component-opened-value="<%= @opened %>"
  data-modal-backdrop="static"
  id="<%= @modal_id %>"
  tabindex="-1"
  aria-modal="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative max-h-full max-w-4xl">
    <!-- Modal content -->
    <div class="relative rounded-lg bg-white shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-start justify-between rounded-t border-b p-5 dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white lg:text-2xl mr-3">
          <%= @title %>
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                data-modal-hide="<%= @modal_id %>">
          <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Cerrar modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <%= render partial: @partial, locals: @locals %>
    </div>
  </div>
</div>

<div class="hidden"
     id="modal-trigger-open-<%= @modal_id %>"
     data-modal-target="<%= @modal_id %>"
     data-modal-show="<%= @modal_id %>"
     >
</div>